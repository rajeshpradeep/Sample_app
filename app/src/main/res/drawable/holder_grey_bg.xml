<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true" android:state_enabled="true" android:state_activated="true">
        <shape
            android:shape="rectangle">
            <corners android:radius="5sp"/>
            <solid android:color="@color/hint_color"/>
            <stroke android:color="@color/colorAccent" android:width="2sp"/>
        </shape>
    </item>

    <item android:state_selected="false" android:state_enabled="false" android:state_activated="false">
        <shape
            android:shape="rectangle">
            <corners android:radius="5sp"/>
            <solid android:color="@color/hint_color"/>
        </shape>
    </item>


</selector>